<div class="container">
	<div class="row">
    <div class="col-12">
    <h1 style="text-align: center"><strong>Eat-Da-Burger!</strong></h1>
    <img class="image" src="../public/assets/images/dsBuffer.bmp.png" alt="burger image">
    </div>
	</div>
  <div class = "row">
    <div class="col-4" class="task">
      <h3>Burgers Available</h3>
    <ol>
      {{#each burgers}}
        {{#unless devoured}}
          {{> burgers/burger-block devoured=false}}
        {{/unless}}
      {{/each}}
    </ol>
  </div>
  <div class="col-4">
    <h2>Enter a burger you want to eat</h2>
    <form class="create-form">
      <div class="form-group">
        <label for="ca">Burger:</label>
        <input type="text" id="ca" name="name">
      </div>
      <button type="submit">Submit</button>
    </form>
  </div>
  <div class="col-4">
    <h3>Burgers Devoured</h3>
    <ol>
      {{#each burgers}}
        {{#if devoured}}
          {{> burgers/burger-block devoured=true}}
        {{/if}}
      {{/each}}
    </ol>
  </div>
  </div>
</div>